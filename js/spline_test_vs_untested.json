{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/SteveHuy/Vegalite-FIT3179/main/data/Minimised%20Powerlifting%20Data.csv"
  },
  "transform": [
    {"calculate": "datum.Tested == 'Yes' ? 'Yes' : 'no'", "as": "tested_check"}
  ],
  "spacing": 0,
  "hconcat": [
    {
      "transform": [{"filter": {"field": "tested_check", "equal": "Yes"}}],
      "width": 300,
      "title": "Yes",
      "mark": "bar",
      "encoding": {
        "y": {
          "field": "AgeClass",
          "title": null,
          "axis": null,
          "sort": "descending"
        },
        "x": {
          "aggregate": "average",
          "field": "TotalKg",
          "title": "Total Average Kg",
          "axis": {"format": "s"},
          "sort": "descending"
        },
        "color": {
          "field": "tested_check",
          "scale": {"range": ["#675193", "#ca8861"]},
          "legend": null
        },
        "tooltip": [
          {"field": "AgeClass", "title": "Age Bracket"},
          {
            "aggregate": "average",
            "field": "TotalKg",
            "title": "Total Average Kg"
          }
        ]
      }
    },
    {
      "view": {"stroke": null},
      "mark": {"type": "text", "align": "center"},
      "encoding": {
        "y": {
          "field": "AgeClass",
          "type": "nominal",
          "axis": null,
          "sort": "descending"
        },
        "text": {"field": "AgeClass", "type": "nominal"}
      }
    },
    {
      "transform": [{"filter": {"field": "tested_check", "equal": "no"}}],
      "title": "No",
      "width": 300,
      "mark": "bar",
      "encoding": {
        "y": {
          "field": "AgeClass",
          "title": null,
          "axis": null,
          "sort": "descending"
        },
        "x": {
          "aggregate": "average",
          "field": "TotalKg",
          "title": "Total Average Kg",
          "axis": {"format": "s"}
        },
        "color": {"field": "tested_check", "legend": null},
        "tooltip": [
          {"field": "AgeClass", "title": "Age Bracket"},
          {
            "aggregate": "average",
            "field": "TotalKg",
            "title": "Total Average Kg"
          }
        ]
      }
    }
  ],
  "config": {"view": {"stroke": null}, "axis": {"grid": false}}
}